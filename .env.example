# Microsoft Entra ID Configuration
# Your Entra ID home tenant ID (for single-tenant) or leave empty for multi-tenant
ENTRA_TENANT_ID=your-home-tenant-id

# Your Entra ID Application (client) ID - the basis for your Application ID URI
ENTRA_CLIENT_ID=your-application-id

# MCP Server Configuration
# Public URL of this MCP server (used in Protected Resource Metadata)
MCP_SERVER_URL=https://your-mcp-server.com

# Resource identifier (defaults to MCP_SERVER_URL if not set)
MCP_RESOURCE_IDENTIFIER=https://your-mcp-server.com/mcp

# Multi-tenant: comma-separated list of authorized tenant IDs
# Use 'common' during development to accept any tenant (not recommended for production)
AUTHORIZED_TENANTS=tenant-id-1,tenant-id-2

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration (comma-separated origins, or '*' for permissive)
ALLOWED_ORIGINS=*

# OAuth Feature Toggle (set to 'true' to enable OAuth for HTTP transports)
OAUTH_ENABLED=false
